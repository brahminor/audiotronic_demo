<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
   <t t-name="ChequeDifPopup" owl="1">
       <div role="dialog" class="modal-dialog">
           <div class="popup popup-couponproducts" style="background-color: #c3e1e6">
            <p class="title">
                   <t t-esc="props.title" />
            </p>
            <span class="body">
                     
                   <!-- Adding text field-->
                   <label class="check_label">N° de chéque : </label>
                    <br/>
                   <input  type="text" t-model="state.inputValue_1" t-ref="input" style="margin-top: 10px;"></input>

                    <br/>
                     <!-- Adding date field-->
                    <label class="check_label">Date remise:</label>
                     <br/>
                     <input  type="date" t-model="state.inputValue_2" t-ref="input" style="margin-top: 10px;"></input>
                     <!-- Adding selection field-->
                   
               </span>
               <div class="footer">
                   <div class="button confirm" t-on-click="confirm">
                        <t t-esc="props.confirmText" />
                   </div>
                   <div class="button cancel" t-on-click="cancel">
                        <t t-esc="props.cancelText" />
                   </div>

               </div>
           </div>
       </div>
   </t>
</templates>